
@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Item
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Total
                    </th>
                    <th>
                        Promotion
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Product.Name </td>
                        <td> @item.Quantity </td>
                        <td> &euro;@item.Product.Price </td>
                        <td> &euro;@item.Total</td>
                        <td>@item.Product.Promotion</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>